    'entity class' => 'Element',
    'controller class' => 'ElementController',
    'base table' => 'element',
    'fieldable' => TRUE,
    'exportable' => TRUE,
    'entity keys' => array(
      'id' => 'element_id',
      'bundle' => 'type',
    ),
    // Bundles are defined by the types below.
    'bundles' => array(),
    'bundle keys' => array('bundle' => 'type'),
    'label callback' => 'entity_class_label',
    'uri callback' => 'entity_class_uri',
    'access callback' => 'element_access',
    'module' => 'element',
    // The information below is used by the Controller;
    // which extends the EntityDefaultUIController.
    'admin ui' => array(
      'path' => 'admin/content/element',
      'file' => 'includes/element.admin.inc',
      'controller class' => 'ElementUIController',
      'menu wildcard' => '%element',
    ),
  );
  // The entity that holds information about the entity types.
  $return['element_type'] = array(
    'label' => t('Element Type'),
    'entity class' => 'ElementType',
    'controller class' => 'ElementTypeController',
    'base table' => 'element_type',
    'fieldable' => FALSE,
    'bundle of' => 'element',
    'exportable' => TRUE,
    'entity keys' => array(
      'id' => 'id',
      'name' => 'type',
      'label' => 'label',
    ),
    'access callback' => 'element_type_access',
    'module' => 'element',
